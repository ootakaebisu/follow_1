<% if @users.exists? %>
  <table>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td>フォロー数：<%= user.followings.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>